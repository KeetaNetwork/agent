+	if (raw_signature_len < 0) {
+		return(NULL);
+	}
+
+	if (raw_signature_len % 2 != 0) {
+		return(NULL);
+	}
+
+	r_len = raw_signature_len / 2;
+	s_len = raw_signature_len / 2;
+	r = &raw_signature_buffer[0];
+	s = &raw_signature_buffer[r_len];
