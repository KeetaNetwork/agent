+
+	signature = signature_object->asn1rep;
+	signature_len = signature_object->asn1rep_len;
+
+	memcpy(signature_buffer + 1, signature, signature_len);
+	signature_buffer[0] = '\x00';
+
+	free(signature_object->asn1rep);
+	free(signature_object);
+
