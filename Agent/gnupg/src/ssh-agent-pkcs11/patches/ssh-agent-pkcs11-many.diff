+	signature_object = asn1_x509_write_asn1_sequence(ASN1_X509_TO_FREE_ASN1REP | ASN1_X509_TO_FREE_ITEMS,
+		asn1_x509_write_asn1_integer(0, r, r_len),
+		asn1_x509_write_asn1_integer(0, s, s_len),
+		NULL
